<Window x:Class="NumericalSolutionOfDifferentialEquations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericalSolutionOfDifferentialEquations"
        xmlns:dataLabel="clr-namespace:NumericalSolutionOfDifferentialEquations.CustomDataLabel"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:TypeEnum="clr-namespace:NumericalSolutionOfDifferentialEquations.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        Title="MainWindow" Height="550" Width="1200">
    <Window.Resources>
        <ObjectDataProvider x:Key="type" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="TypeEnum:Type"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5.5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Type"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Source={StaticResource type}}" SelectedItem="{Binding Type}"/>

                    <Label Grid.Row="1" Content="Epression"/>
                    <TextBox Grid.Row="2" Text="{Binding DataInitial.Expression}"/>

                    <Label Grid.Row="1" Content="X0" Grid.Column="1"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DataInitial.X0}" />

                    <Label Grid.Row="1" Content="Step" Grid.Column="2"/>
                    <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding DataInitial.Step}" />

                    <Label Grid.Row="1" Content="Amount of steps" Grid.Column="3"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding DataInitial.AmountOfSteps}"/>

                    <Label Grid.Row="1" Content="y0" Grid.Column="4"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding DataInitial.Y0}"/>  

            <Button Grid.Column="5" Grid.Row="1" Grid.RowSpan="2" Content="Draw" Command="{Binding SolveCommand}"/>
                </Grid>
        <lvc:CartesianChart AnimationsSpeed="0:0:0.5"  VerticalContentAlignment="Stretch" Height="354" Grid.Row="1">
            <lvc:CartesianChart.DataTooltip>
                <dataLabel:PointDataLabel/>
            </lvc:CartesianChart.DataTooltip>
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding DataReturn.ChartValues}"
                                    PointGeometrySize="5"
                                    LineSmoothness="0.25"
                                    StrokeThickness="1" 
                                    Stroke="#F34336"
                                    Fill="Transparent"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis    
                              MaxValue="{Binding AxisMax}" 
                              MinValue="{Binding AxisMin}"
                              Unit="{Binding AxisUnit}">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="{Binding AxisStep}" />
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis
                              MaxValue="{Binding AxisMax}" 
                              MinValue="{Binding AxisMin}"
                              Unit="{Binding AxisUnit}">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="{Binding AxisStep}" />
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <Grid Grid.Column="1" Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox Text="{Binding Text}"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
